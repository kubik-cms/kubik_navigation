<template data-navigation-selector-target='resourceTemplate'>
  <%= f.inputs "Item look", data: { 'navigation-selector-target': 'itemLookWrapper' } do %>
    <%= f.input :title,
      input_html: {
        data: {
          'navigation-selector-target': 'linkTitle'
        }
      }
    %>
    <%= f.input :text,
      input_html: {
        data: {
          'navigation-selector-target': 'linkText'
        }
      }
    %>
    <%= f.input :description %>
    <%= f.input :slug,
      wrapper_html: {
        data: {
          'navigation-selector-target': 'linkSlugWrapper'
        }
      },
      input_html: {
        data: {
          'navigation-selector-target': 'linkSlug'
        }
      }
    %>
  <% end %>
</template>
